<!DOCTYPE html>
<html>
<head>
    <title>My Technical Blog</title>
    <style>
        body {
            background-color: lightblue;
            color: white;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            box-sizing: border-box;
        }

        h1 {
            text-align: center;
            margin-top: 0;
        }

        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .blog-post {
            max-width: 600px;
            width: 100%;
            background-color: #333;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 5px;
        }

        .blog-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .blog-content {
            font-size: 16px;
        }

        .read-more {
            cursor: pointer;
            color: #00f;
            text-decoration: underline;
        }

        .full-content {
            display: none;
        }
    </style>
</head>
<body>
    <h1>Welcome to My Technical Blog</h1>

    <div class="container" id="blog-container">
        <!-- Blog posts will be displayed here -->
    </div>

    <script>

        function showFullContent(title) {
            window.location.href = `/blogpost?name=${encodeURIComponent(title)}`;
            console.log(`Clicked on "${title}"`);
        }

        document.addEventListener("DOMContentLoaded", () => {
            async function fetchBlogPosts() {
                try {
                    const response = await fetch("/getlast5blogposts");
                    if (response.ok) {
                        const data = await response.json();
                        const blogContainer = document.getElementById("blog-container");

                        data.forEach((post) => {
                            const postElement = document.createElement("div");
                            postElement.className = "blog-post";
                            postElement.innerHTML = `
                                <div class="blog-title">${post.Title}</div>
                                <div class="blog-content">
                                    <div class="preview-content">${post.Content.substring(0, 10)}</div>
                                    <div class="full-content">${post.Content}</div>
                                    <span class="read-more" onclick="showFullContent('${post.Title}')">Read More</span>
                                </div>
                            `;
                            blogContainer.appendChild(postElement);
                        });
                    } else {
                        console.error("Failed to fetch blog posts");
                    }
                } catch (error) {
                    console.error("An error occurred:", error);
                }
            }
            fetchBlogPosts();
        });
    </script>
</body>
</html>
